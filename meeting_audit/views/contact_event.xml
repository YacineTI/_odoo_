<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_calendar" model="ir.ui.view">
        <field name="name">res.partner.calendar.inht</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath
                    expr="//page[last()]"
                    position="after">
                <page name="meetings"
                      string="Meetings"
                      attrs="{'invisible': [('is_company','=',False)]}"
                >
                    <field
                            name="calendar_ids"
                            domain="[('partner_ids','=', id)]"
                    >
                        <tree
                                string="Partner calendar"
                        >
                            <field name="name"/>
                            <field name="description"/>
                            <field name="recurrency"/>
                            <field name="state" invisible="1"/>
                        </tree>
                    </field>
                </page>

            </xpath>
        </field>
    </record>

</odoo>
